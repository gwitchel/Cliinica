{
  "name": "Cliinica",
  "version": "1.0.29",
  "description": "Patient intake and referral tracking",
  "main": "main.js",
  "author": "Georgia Witchel",
  "scripts": {
    "start": "webpack serve --mode development & electron .",
    "electron-start": "electron .",
    "build:react": "webpack --mode production",
    "build": "npm run build:react && electron-builder",
    "build:local": "webpack",
    "build:win": "electron-builder --win"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@iconify/react": "^5.2.0",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "css-loader": "^7.1.2",
    "csv-parser": "^3.0.0",
    "fast-csv": "^5.0.2",
    "file-saver": "^2.0.5",
    "json2csv": "^6.0.0-alpha.2",
    "node-fetch": "^3.3.2",
    "os-browserify": "^0.3.0",
    "papaparse": "^5.4.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-native-drawer-layout": "^4.0.1",
    "react-table": "^7.8.0",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "electron": "24.2.0",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2",
    "html-webpack-plugin": "^5.6.3",
    "terser-webpack-plugin": "^5.3.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "com.georgiawitchel.cliinica",
    "productName": "Cliinica",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "data-preprocessing/**/*",
      "public/**/*",
      "preload.js",
      "assets/**/*",
      "main.js",
      "package.json",
      "patients.csv",
      "changelog.csv",
      "organization.csv",
      "patient-flows.json",
      "user-profile.json",
      "flows/**/*",
      "!OneDrive/**"
    ],
    "extraResources": [
      {
        "from": "patients.csv",
        "to": "patients.csv"
      },
      {
        "from": "changelog.csv",
        "to": "changelog.csv"
      },
      {
        "from": "organization.csv",
        "to": "organization.csv"
      },
      {
        "from": "patient-flows.json",
        "to": "patient-flows.json"
      },
      {
        "from": "user-profile.json",
        "to": "user-profile.json"
      },
      {
        "from": "flows",
        "to": "flows"
      }
    ],
    "extraMetadata": {
      "env": {
        "ONEDRIVE_PATH": "${env.ONEDRIVE_PATH}"
      }
    },
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": ["dmg"],
      "provisioningProfile": "build/Cliinica_provisioning_profile_2.provisionprofile",
      "identity": "georgia witchel (RQ535HNNVW)",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "helperBundleId": "com.georgiawitchel.cliinica.helper",
      "icon": "assets/logo.icns",
      "minimumSystemVersion": "12.0"
    },
    "afterSign": "build/notarize.js",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons"
    }
  },
  "nsis": {
    "oneClick": true,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": false,
    "installerIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/uninstall-icon.ico"
  }
}
