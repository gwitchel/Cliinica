<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" 
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Enable App Sandbox -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Application Identifier for Main App -->
  <!-- Hardcode your Team ID + explicit bundle ID -->
  <key>com.apple.application-identifier</key>
  <string>RQ535HNNVW.com.georgiawitchel.cliinica</string>

  <!-- Keychain Access Group -->
  <!-- Use your explicit ID or keep wildcard if you really need it. 
       Typically, matching the app-identifier exactly is safest. -->
  <key>keychain-access-groups</key>
  <array>
    <string>RQ535HNNVW.com.georgiawitchel.cliinica</string>
  </array>

  <!-- Network Access -->
  <key>com.apple.security.network.client</key>
  <true/>
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- Allow file read/write via user selection dialogs -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Allow IPC (and child processes under the sandbox) -->
  <key>com.apple.security.inherit</key>
  <true/>

  <!-- Enable automation or distributed notifications -->
  <key>com.apple.security.automation.apple-events</key>
  <true/>
</dict>
</plist>
